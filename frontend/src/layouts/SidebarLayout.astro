---
import ProfileCard from '@components/cards/ProfileCard.astro';
import BaseLayout from './BaseLayout.astro';
import Navbar from '@components/Navbar.astro';
const isLogged = true;
---

<BaseLayout>
  <Navbar />
  <div class="flex items-start justify-between gap-10 w-full">
    <div class="flex flex-col gap-6 w-full">
      <slot name="main" />
    </div>
    <div class="flex flex-col gap-6 w-1/3">
      {isLogged && <ProfileCard />}
      <slot name="sidebar" />
    </div>
  </div>
</BaseLayout>
